using namespace std;



int main() {
	setlocale(LC_ALL, "Russian");
	Runge Runge;
	RunTh RunTh;
	Proj Proj;
	int choice;
	int exit = 0;
	do {
		cout << "Программа решает ОДУ. Выберите метод, которым хотите решить (введите номер метода):\n";
