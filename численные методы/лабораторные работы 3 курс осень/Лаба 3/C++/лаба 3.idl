		cout << "2.Метод прогонки.\n";
		cout << "3.Проекционный метод.\n";
		cout << "4.Завершение работы.\n";
		cout << "Введите число:";
		cin >> choice;

		// Правильность выбора метода
		while (!(choice == 1 || choice == 2 || choice == 3 || choice == 4)) {
			cout << "Выберите числа от 1 до 4!\n";
			cin >> choice;

			//Проверка на число
			while (!cin)
