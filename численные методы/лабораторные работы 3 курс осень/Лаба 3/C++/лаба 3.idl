				cout << "Введите число!\n";
				cin.clear();
				while (cin.get() != '\n') continue;
				cin >> choice;
			}
		}
		switch (choice) {
		case 1:
			cout << "Вы выбрали метод Рунге-Кутта.\n";
			Runge.main();
			break;
		case 2:
			cout << "Вы выбрали метод прогонки.\n";
			RunTh.main();
			break;

		case 3:
			cout << "Вы выбрали проекционный метод.\n";
			Proj.main();
			break;

