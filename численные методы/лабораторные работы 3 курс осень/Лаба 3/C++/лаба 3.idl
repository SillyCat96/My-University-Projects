			cout << "Завершение работы.\n\n";
			cout << "Обратная связь:\n";
			cout << "Студент гр. 21-САИ, Краличев Игорь Евгеньевич, ikralichev@list.ru\n";
			exit = 1;
			break;
		}
	} while (exit == 0);
